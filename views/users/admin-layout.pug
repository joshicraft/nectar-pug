doctype html
html
  head
    title LoginApp
    |
    link(rel="stylesheet", href="/stylesheets/admin/admin.css")
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous")

  body
    .container.mb-4.mt-4
      .nav.nav-tabs
        - console.log(page[0])
        if user
          - var tabs = [{name: 'Dashboard', route: '/users'},{name: 'Products', route: '/users/products'},{name: 'Contacts', route: '/users/contacts'},{name: 'Stockists', route: '/users/stockists'},{name: 'Partners', route: '/users/partners'},{name: 'Logout', route: '/users/logout'}]
          each tab, i in tabs
            li.nav-item(class=(i===tabs.length-1 ? "_flex-end" : ""))
              a.nav-link(class=(page[0].toLowerCase() === tab.name.toLowerCase() ? 'active' : '') href=tab.route) #{tab.name}
        else
          - var tabs = [{name: 'Login', route: '/users/login'},{name: 'Register', route: '/users/register'}]
          each tab in tabs
            li.nav-item
              a.nav-link(class=(page[0] === tab.name.toLowerCase() ? 'active' : '') href=tab.route) #{tab.name}
    .container.mb-2
      .col-lg-12
        if success
          .alert.alert-success #{success}
        if error_msg
          .alert.alert-danger #{error_msg}
        if error
          .alert.alert-danger #{error}

      block content

