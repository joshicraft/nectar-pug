extends admin-layout

block content
  p
    button.m-2.btn.btn-primary(type='button', data-toggle='collapse', data-target='#add', aria-expanded='false', aria-controls='add') Add a Stockist
    button.m-2.btn.btn-primary(type='button', data-toggle='collapse', data-target='#show', aria-expanded='false', aria-controls='show') Show all Stockists

  #add.collapse.mb-4
    .card.card-body
      h2 Add Stockist
      p Fill out the form below
      form.p-2.mb-4(method="post", action="/users/stockists")
        .form-group
          label Name
          input.form-control(type="text", name="name", placeholder="Enter the stockists name here...")
        .form-group
          label Address
          input.form-control(type="text", name="address", placeholder="Enter their address here e.g. 123 Test Street, Clevedon, Auckland")
        .form-group
          label Website
          input.form-control(type="text", name="website", placeholder="Enter their website here e.g. www.stockist.com")
        .form-group
          label Phone
          input.form-control(type="text", name="phone", placeholder="Enter their contact number here e.g. +64 123 4567")

        button.btn.btn-default(type="submit") Submit

  #show.collapse.show
    .card.card-body
      table.table.table-dark
        h2 Stockist List
        thead
          tr
            th(scope='col') #
            th(scope='col') Name
            th(scope='col') Address
            th(scope='col') Website
            th(scope='col') Phone
            th(scope='col')
            th(scope='col')

        tbody
          each stockist, index in stockists
            tr
              th(scope='row') #{index + 1}
              td #{stockist.name}
              td #{stockist.address}
              td #{stockist.website}
              td #{stockist.phone}
              td.delete Delete
              td.edit Edit




