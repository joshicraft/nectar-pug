//extends ../layout

mixin menu-icon(name, href)
  a.-menu-icon(class=name + '-icon', href=href)
    if block
      block

block append footer
  footer
    .wrapper._flex
      .-contact-list._footer-item
        each val in contact
          div
            li
              span #{val.title}:
              span &nbsp;#{val.content}
      .-social-media-list._flex_h._footer-item
        div
          +menu-icon('contact', '/contact')
            include icons/contact
        div
          +menu-icon('facebook', social_media.facebook.link)
            include icons/facebook
        div
          +menu-icon('instagram', social_media.instagram.link)
            include icons/instagram
